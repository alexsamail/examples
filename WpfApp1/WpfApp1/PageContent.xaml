<Page x:Class="Enumerables.PageContent"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Enumerables"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="PageGame">

    <StackPanel Grid.Row="0" Grid.ColumnSpan="4">
        <TextBlock Text="{Binding Path=Name}" Margin="10" HorizontalAlignment="Center" FontFamily="Italic" FontSize="16"/>
        <Image Source="{Binding Path=Image}" Margin="20 0 20 0" Name="image"/>
    </StackPanel>
</Page>
